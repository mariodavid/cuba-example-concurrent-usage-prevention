<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.rtcab.cepl.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.rtcab.cepl.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.rtcab.cepl.entity.Order"
                    view="order-view">
            <collectionDatasource id="lineItemsDs"
                                  property="lineItems"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field property="orderDate"/>
                <field property="customer"/>
            </column>
        </fieldGroup>
        <groupBox id="lineItemsBox"
                  caption="msg://com.rtcab.cepl.entity/Order.lineItems">
            <table id="lineItemsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create" openType="DIALOG"/>
                    <action id="edit" openType="DIALOG"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="order"/>
                    <column id="product"/>
                </columns>
                <rows datasource="lineItemsDs"/>
                <buttonsPanel>
                    <button action="lineItemsTable.create"/>
                    <button action="lineItemsTable.edit"/>
                    <button action="lineItemsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
